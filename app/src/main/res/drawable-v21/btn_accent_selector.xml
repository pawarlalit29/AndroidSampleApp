<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/myAccentColorLight">
    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@color/grey_500" />
    <!-- Selected -->
    <item android:state_selected="true" android:drawable="@color/grey_500" />
    <!-- Focus -->
    <item android:state_focused="true" android:drawable="@color/grey_500" />
    <!-- Default -->
    <item android:drawable="@color/myAccentColor"/>
</ripple>