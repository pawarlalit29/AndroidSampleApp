<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lalit.androidsampleapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        name="com.lalit.retailstore.RetailStoreApp"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.lalit.retailstore.User_Interface.Activity.MainActivty.MainActivity" />
        <activity android:name="com.lalit.retailstore.User_Interface.Activity.ProductDetailActivity.ProductDetailActivity" />
        <activity android:name="com.lalit.retailstore.User_Interface.Activity.CheckOutActivity.CheckOutActivity" />
        <activity android:name="com.lalit.retailstore.User_Interface.Activity.ProductImageActivity.ProductImageviewActivity" />
        <activity android:name="com.lalit.retailstore.User_Interface.Activity.SplashScreenActivity.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>